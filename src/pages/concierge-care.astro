---
import Layout from "@/layouts/Layout.astro";
import Container from "@/components/container.astro";
import Sectionhead from "@/components/sectionhead.astro";

// src/pages/concierge-care.astro
// A full page dedicated to Concierge Care Management Services.
import { Picture } from "astro:assets";

import Footer from "../components/Footer.astro";
import handsImage from "@/assets/hands-img.png";

---



<Layout title="Concierge">
  <Container>
    <html lang="en">
        <head>
            <meta charset="UTF-8">
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            <title>Concierge Care Management</title>

            <!-- Google Fonts -->
            <link rel="preconnect" href="https://fonts.googleapis.com">
            <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
            <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@500;700&family=Lato:wght@400;700&display=swap" rel="stylesheet">

            <style>
                /* Global font styles */
                .font-serif { font-family: 'Playfair Display', serif; }
                .font-sans { font-family: 'Lato', sans-serif; }
            </style>
        </head>
        <body class="font-sans bg-white">

        <!-- Page Header -->
        <header class="bg-[#e3efee] py-20 px-4 sm:px-6 lg:px-8">
            <div class="max-w-4xl mx-auto text-center">
                <h1 class="font-serif text-4xl md:text-5xl lg:text-6xl text-[#393836] font-bold leading-tight">
                    Concierge Care Management
                </h1>
                <p class="mt-6 max-w-3xl mx-auto text-lg text-[#575654] leading-relaxed">
                    A comprehensive, personalized care management service which meets the unique needs of families across Long Island.  If you are caring for a family member, and juggling the responsibilities of work and family, then we can help. Our premier concierge care management services blend advocacy and service coordination with speed, compassion and personalization.
                </p>
            </div>
        </header>

        <section class="pt-16 pb-8 md:pt-12 md:pb-12">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="grid lg:grid-cols-2 place-items-center gap-12">
                    <div class="py-6">
                        <Picture
                            class="rounded-2xl shadow-xl object-cover w-full h-full"
                            src={handsImage}
                            alt="A caregiver's hands gently holding the hands of an elderly person, symbolizing support and compassion."
                            widths={[200, 400, 600]}
                            sizes="(max-width: 1023px) 100vw, 50vw"
                            loading="lazy"
                            format="avif"
                        />
                    </div>
                    <div class="text-center md:text-left">
                        <h2 class="font-serif text-3xl md:text-4xl lg:text-5xl text-[#393836] font-bold leading-tight mb-6">
                            A Vital Resource for Your Family
                        </h2>
                        <p class="text-lg text-[#575654] leading-relaxed mb-8">
                            Our knowledgeable staff will be a vital resource, providing information, referrals, and linkages to help you and your family navigate complex systems.
                        </p>
                    </div>

                </div>
            </div>
        </section>

        <!-- Section 1: Core Services -->
        <main class="py-20 px-4 sm:px-6 lg:px-8">
            <div class="max-w-4xl mx-auto">
                <div class="text-center">
                    <h2 class="font-serif text-3xl md:text-4xl text-[#393836] mb-6">
                        Dedicated Care Management
                    </h2>
                    <p class="text-lg text-[#575654] leading-relaxed max-w-3xl mx-auto mb-16">
                        From seamless navigation through healthcare systems to the coordination of medical or counseling appointments, we provide comprehensive, hands-on support.
                    </p>
                </div>

                <!-- Services Grid -->
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                    <!-- Service Item -->
                    <div class="bg-[#fbfaf8] p-6 rounded-xl flex items-start space-x-4">
                    <svg class="flex-shrink-0 h-7 w-7 text-[#332e76] mt-1" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.286zm0 13.036h.008v.008h-.008v-.008z" /></svg>
                    <div>
                        <h3 class="font-serif text-lg text-[#393836]">Advocacy</h3>
                        <p class="text-[#575654]">For appropriate, timely, and coordinated care.</p>
                    </div>
                </div>
                <!-- Service Item -->
                <div class="bg-[#fbfaf8] p-6 rounded-xl flex items-start space-x-4">
                    <svg class="flex-shrink-0 h-7 w-7 text-[#332e76] mt-1" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M18 18.72a9.094 9.094 0 003.741-.479 3 3 0 00-4.682-2.72m-7.5-2.962a3.75 3.75 0 015.25 0m-5.25 0a3.75 3.75 0 00-5.25 0m7.5-7.5c3.45 0 6.25 2.8 6.25 6.25S14.7 19.5 11.25 19.5 5 16.7 5 13.25 7.8 7 11.25 7z" /></svg>
                    <div>
                        <h3 class="font-serif text-lg text-[#393836]">Care Coordination</h3>
                        <p class="text-[#575654]">To navigate complex medical systems with ease.</p>
                    </div>
                </div>
                <!-- Service Item -->
                <div class="bg-[#fbfaf8] p-6 rounded-xl flex items-start space-x-4">
                     <svg class="flex-shrink-0 h-7 w-7 text-[#332e76] mt-1" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" /></svg>
                    <div>
                        <h3 class="font-serif text-lg text-[#393836]">24/7 Crisis Response</h3>
                        <p class="text-[#575654]">Telephone support whenever you need it.</p>
                    </div>
                </div>
                <!-- Service Item -->
                <div class="bg-[#fbfaf8] p-6 rounded-xl flex items-start space-x-4">
                    <svg class="flex-shrink-0 h-7 w-7 text-[#332e76] mt-1" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M12 20.25c4.97 0 9-3.694 9-8.25s-4.03-8.25-9-8.25S3 7.444 3 12c0 2.104.859 4.023 2.273 5.48.432.447.74 1.04.586 1.641a4.483 4.483 0 01-.923 1.785A5.969 5.969 0 006 21c1.282 0 2.47-.402 3.445-1.087.81.22 1.668.337 2.555.337z" /></svg>
                    <div>
                        <h3 class="font-serif text-lg text-[#393836]">Counseling</h3>
                        <p class="text-[#575654]">For individuals and families.</p>
                    </div>
                </div>
                <!-- Service Item -->
                <div class="bg-[#fbfaf8] p-6 rounded-xl flex items-start space-x-4">
                    <svg class="flex-shrink-0 h-7 w-7 text-[#332e76] mt-1" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M19.5 12c0-1.232-.046-2.453-.138-3.662a4.006 4.006 0 00-3.7-3.7 48.678 48.678 0 00-7.324 0 4.006 4.006 0 00-3.7 3.7c-.092 1.21-.138 2.43-.138 3.662a4.006 4.006 0 003.7 3.7 48.656 48.656 0 007.324 0 4.006 4.006 0 003.7-3.7zM12 15.75a3.75 3.75 0 100-7.5 3.75 3.75 0 000 7.5z" /></svg>
                    <div>
                        <h3 class="font-serif text-lg text-[#393836]">In-Person Support</h3>
                        <p class="text-[#575654]">Accompaniment to medical appointments and home visits.</p>
                    </div>
                </div>
                <!-- Service Item -->
                <div class="bg-[#fbfaf8] p-6 rounded-xl flex items-start space-x-4">
                    <svg class="flex-shrink-0 h-7 w-7 text-[#332e76] mt-1" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M3.75 3v11.25A2.25 2.25 0 006 16.5h2.25M3.75 3h-1.5m1.5 0h16.5m0 0h1.5m-1.5 0v11.25A2.25 2.25 0 0118 16.5h-2.25m-7.5 0h7.5m-7.5 0l-1.5-1.5m1.5 1.5l1.5-1.5m0 0l1.5 1.5m-1.5-1.5l-1.5 1.5" /></svg>
                    <div>
                        <h3 class="font-serif text-lg text-[#393836]">Transition Assistance</h3>
                        <p class="text-[#575654]">Guidance between home, hospital, rehabilitation and hospice.</p>
                    </div>
                </div>
            </div>
            <p class="text-2xl text-[#332e76] leading-relaxed text-center mt-8">
                Additional Services Available Upon Request.
            </p>
        </div>
    </main>

            <!-- Heart Divider -->
    <div class="relative flex justify-center">
        <div class="absolute inset-0 flex items-center" aria-hidden="true">
            <div class="w-full border-t border-gray-300/70"></div>
        </div>
        <div class="relative flex justify-center">
            <span class="bg-[#fbfaf8] px-4">
                <svg class="h-6 w-6 text-[#332e76]" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z" />
                </svg>
            </span>
        </div>
    </div>




    <section class="py-10 px-4 sm:px-6 lg:px-8">
        <div class="max-w-6xl mx-auto">
            <div class="text-center">
                <h2 class="font-serif text-3xl md:text-4xl text-[#393836] mb-6">
                    Resources Include
                </h2>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
                
                <div  class="bg-white rounded-lg p-8 border border-gray-200">
                    <h3  class="font-serif text-2xl text-[#393836] mb-3">Benefits and Entitlements</h3>
                    <p class="text-[#575654] leading-relaxed">
                        We provide crucial assistance with accessing and navigating complex systems like <span class="text-[#004ba8] font-bold"> <a href='/medicaid-assistance'> Medicaid, </a> </span> ensuring you receive the support you are need and deserve to.
                    </p>
                </div>

                <div class="bg-white rounded-lg p-8 border border-gray-200">
                    <h3 class="font-serif text-2xl text-[#393836] mb-3">Insurance Education</h3>
                    <p class="text-[#575654] leading-relaxed">
                        We offer clear education and strong advocacy to help you understand your coverage and make informed decisions about your healthcare.
                    </p>
                </div>
            </div>
            </div>
        </div>
    </section>

</body>
</html>
</Container>
</Layout>
