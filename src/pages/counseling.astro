---
import Layout from "@/layouts/Layout.astro";
import Container from "@/components/container.astro";
import Footer from "../components/Footer.astro";
import Cta from "@/components/cta.astro";

const acceptedInsurances = [
  'Aetna',
  'Anthem Blue Cross and Blue Shield (Formerly Empire)',
  'Anthem EAP',
  'Blue Cross Blue Shield of Massachusetts',
  'Carelon Behavioral Health',
  'Cigna',
  'Highmark BlueCross BlueShield of Western New York', 
  'Highmark Blue Shield of Northeastern New York', 
  'Horizon Blue Cross and Blue Shield of New Jersey',
  'Medicare (Original)',
  'Medicare Advantage Plans',
  'Oscar (Optum)',
  'Oxford (Optum)',
  'Quest Behavioral Health',
  'United Healthcare (Optum)',
  'United Healthcare Medicare Advantage',
]

const comingSoonInsurers = [
  'Optum Medicaid', 
  'Humana Medicare Advantage', 
  'Horizon Blue Cross Blue Shield of NJ Medicare Advantage', 
]
---

<Layout title="Counseling">
  <Container>
    <html lang="en">
      <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Counseling</title>

        <!-- Google Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
          href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@500;700&family=Lato:wght@400;700&display=swap"
          rel="stylesheet"
        />

        <style>
          /* Global font styles */
          .font-serif {
            font-family: "Playfair Display", serif;
          }
          .font-sans {
            font-family: "Lato", sans-serif;
          }
          /* A helper class for a subtle text highlight */
 
        </style>
      </head>
      <body class="font-sans bg-white">
        <!-- Page Header -->
        <header class="bg-[#e3efee] py-20 px-4 sm:px-6 lg:px-8">
          <div class="max-w-4xl mx-auto text-center">
            <h1
              class="font-serif text-4xl md:text-5xl lg:text-6xl text-[#393836] font-bold leading-tight"
            >
              Counseling
            </h1>
            <p
              class="mt-6 max-w-6xl mx-auto text-lg text-[#575654] leading-relaxed"
            >
              
              At Guiding Hearts Helping Hands, we understand that confronting serious illness, supporting a loved one through their health journey, experiencing loss, or navigating end-of-life decisions can be profoundly difficult and isolating. Our practice is dedicated to providing compassionate, specialized therapeutic support for individuals and families facing these unique and often overwhelming challenges. 
            </p>

          </div>
        </header>

        <!-- Main Content Section -->
        <main class="py-10 px-4 sm:px-6 lg:px-8">
          <div class="max-w-3xl mx-auto space-y-12">
            <!-- Insurance Section -->
            <article> 
              <h2 class="font-serif text-3xl md:text-4xl text-[#393836] mb-6" >
                Insurances Accepted
              </h2>
              <p class="text-lg text-[#575654] leading-relaxed mb-6">
                We are in-network with a variety of insurance providers to make
                care more accessible.
              </p>
              
              <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4 text-[#575654]">
                {acceptedInsurances.map((insurance) => (
                  <div class="bg-gray-50 p-4 rounded-lg">{insurance}</div>
                ))}

              </div>

              <p class="mt-6 text-[#575654]">
                <strong class="highlight">Coming soon:</strong> {comingSoonInsurers.join(", ")}
              </p>
              <p class="highlight mt-4 text-center text-xl text-bold"> 
                If you have any questions about insurance coverage, please
                contact us.
              </p>
            </article>

            <!-- Private Pay Section -->
            <article>
              <h2 class="font-serif text-3xl md:text-4xl text-[#393836] mb-4" >
                Private Pay Options
              </h2>
              <p class="text-lg text-[#575654] leading-relaxed">
                Private pay options are available. Please contact us to further
                discuss rates and arrangements that work for you.
              </p>
            </article>

          <Cta 
            page="Counseling" 
            microcopy="Your first 15 minute consultation is free."
            buttoncopy="Schedule a Free Consultation"
          />

          </div>
        </main>
      </body>
    </html>
  </Container>
</Layout>